
  <link rel="stylesheet" href="/css/prof.css">
  <div class="checkIn-page text-center">
    <div class="row">
    <% if (currentUser.email === 'boss@boss.com' && currentUser.locale === '324 University St, Seattle, WA 98101, USA') { %>
    <h1>Welcome <%= currentUser.firstname %>, Present @ General Assembly!</h1>
          <form id="edit-session" action="/auth/edit-session">
            <div class="form-group">
              <label>Set Session ID:</label>
              <input type="text" name="sessionid" class="form-control" placeholder="Session ID">
            </div>
            <input type="submit" value="Set Session ID" class="btn btn-danger">
          </form>
        </div>

        <h2>Boss Roster, those present @ <%=currentUser.sessionid%></h2>
          <style>
            .dater { font-size: 12px; }
            h2 { text-align: center; }
          </style>
        <h1 class="text-center">Present</h1>
        <% if(people.length <= 0){ %>
            <h2>No one here yet!</h2>
        <% } else { %>
          <table id="tablz" class="table table-striped">
            <thead>
              <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Session ID Check</th>
              </tr>
            <tbody>
            <% people.forEach(function(roster){ %>
                <tr>
                  <th scope="row"><%= roster.firstname %></th>
                  <td><%= roster.lastname %></td>
                  <td class="dater"><%= roster.checkSession %></td>
                </tr>
            <% }); %>
            </tbody>
          </table>
        <% } %>

    <% } else if (currentUser.locale === '324 University St, Seattle, WA 98101, USA') { %>
      <div class="row">
        <div class="col-xs-offset-1 col-xs-10">
          <h2>Check In</h2>
        </div>
      </div> 
      <div class="row">
        <div class="col-xs-offset-1 col-xs-10">
        <h2><%= currentUser.firstname %>, you are currently at General Assembly!</h2>
      </div>
      </div>
      <div class="row">
        <form class='col-xs-offset-1 col-xs-10' id="check-session" action="/auth/check-session">
          <div class="form-group">
            <label>Session ID:</label>
            <input type="hidden" value="<%= currentUser %>">
            <input type="text" name="sessionidcheck" class="form-control" placeholder="Session ID">
          </div>
          <input type="submit" value="Check in" class="btn btn-danger">
        </form>
      </div>
        <% } else { %>
          <div class="row">
          <h1>
            <%= currentUser.firstname %>, at
              <%=currentUser.locale%>
          </h1>
          </div>
  <% } %>
        <% if (currentUser.email != 'boss@boss.com' && currentUser.checkSession === null) { %>
          <div class="row">
            <div>
              <h2>are you here?</h2>
              <h2>check in with your session id !</h2>
            </div>
          </div>
    <% } else if (currentUser.email != 'boss@boss.com' && currentUser.checkSession === currentUser.sessionid) { %>
        <div class="row">
          <div class="col-sm-4">
            <h2>Yay! youre here at General Assembly's Awesome Event!</h2>
          </div>
        </div>
          <div class="row">
            <div class="checkin-img">
              <img src="img/check.png" alt="green check">
            </div>
          </div>
    <% } 
    else if (currentUser.email != 'boss@boss.com' && currentUser.checkSession != currentUser.sessionid ){ %>
      <div class="row">
        <h3 class="col-xs-10 col-sm-10">youre here but wrong event :(</h3>
      </div>
      <div class="row">
        <div class="checkin-img">
          <img src="img/x.png" alt="green check">
        </div>
      </div>
  <% } %>
    </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.16/p5.js"></script>
  <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
